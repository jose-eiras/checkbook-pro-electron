{
  "name": "checkbook-pro",
  "version": "1.0.6",
  "description": "Home Financial App - Desktop Version",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild"
  },
  "keywords": [
    "Electron",
    "Financial",
    "Desktop App"
  ],
  "author": "Jos√© Carlos",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "node-fetch": "^3.3.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^31.7.7",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.checkbook.pro",
    "productName": "CheckBook Pro",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "api-server.js", 
      "checkbook-pro.html",
      "settings server.json",
      "node_modules/**/*",
      "!node_modules/.cache",
      "style.css"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "category": "public.app-category.finance"
    },
    "linux": {
      "category": "Office"
    },
    "nativeRebuilder": "parallel",
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "npmArgs": ["--no-optional"]
  }
}
